{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@config/*": ["config/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@schema/*": ["db/schema/*"]
    }
  },
  "include": [
    "src/**/*.ts", // Include all .ts files in src
    "src/**/*.d.ts", // Include type definitions if any
    "src/**/*.json" // Include JSON files if used
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}

